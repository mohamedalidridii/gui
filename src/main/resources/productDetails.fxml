<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ProductDetails" prefWidth="400" prefHeight="500">
    <VBox spacing="20" alignment="TOP_CENTER">
        <ImageView fx:id="imgProduct" fitWidth="200" fitHeight="200"/>
        <Label fx:id="lblName" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="lblPrice" />
        <TextArea fx:id="txtDescription" editable="false" wrapText="true" prefHeight="150"/>
        <Button fx:id="btnAddToCart" text="Ajouter au panier"/>
    </VBox>
</AnchorPane>

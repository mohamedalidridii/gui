<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.EventController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Events" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0" />

    <TextField fx:id="searchField" promptText="Search events..." AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="260.0" AnchorPane.topAnchor="45.0" />

    <ListView fx:id="eventListView" prefHeight="405.0" prefWidth="311.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="80.0" />

    <VBox layoutX="357.0" prefHeight="488.0" prefWidth="223.0" spacing="10.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="357.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="45.0">
        <HBox spacing="10.0">
            <Label prefWidth="70.0" text="Title:" />
            <TextField fx:id="titleField" prefHeight="25.0" prefWidth="172.0" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox spacing="10.0">
            <Label prefWidth="70.0" text="Start Date:" />
            <DatePicker fx:id="StartDateField" />
        </HBox>
        <HBox spacing="10.0">
            <Label prefWidth="70.0" text="End Date:" />
            <DatePicker fx:id="EndDateField" />
        </HBox>
        <HBox spacing="10.0">
            <Label prefWidth="70.0" text="Location:" />
            <TextField fx:id="locationField" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox spacing="10.0">
            <Label prefWidth="70.0" text="Price:" />
            <TextField fx:id="priceField" />
        </HBox>

        <!-- Radio buttons for National/International -->
        <HBox spacing="10.0">
            <Label prefWidth="70.0" text="Type:" />
            <RadioButton fx:id="nationalRadio" text="National">
            <toggleGroup>
               <ToggleGroup fx:id="eventTypeGroup" />
            </toggleGroup></RadioButton>
            <RadioButton fx:id="internationalRadio" text="International" toggleGroup="$eventTypeGroup" />
        </HBox>

        <!-- Checkboxes for categories -->
        <HBox spacing="10.0">
            <Label prefWidth="70.0" text="Category:" />
            <CheckBox fx:id="seminarCheckBox" text="SEMINAR" />
            <CheckBox fx:id="cruiseCheckBox" text="CRUISE" />
            <CheckBox fx:id="travelCheckBox" text="TRAVEL" />
            <CheckBox fx:id="afterWorkCheckBox" text="AFTER_WORK" />
        </HBox>

        <Label text="Description:" />
        <TextArea fx:id="descriptionArea" prefHeight="100.0" wrapText="true" VBox.vgrow="ALWAYS" />

        <!-- Event image preview -->
        <ImageView fx:id="eventImageView" fitHeight="150.0" preserveRatio="true" VBox.vgrow="NEVER" />
   
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="addButton" text="Add" />
            <Button fx:id="editButton" text="Edit" />
            <Button fx:id="deleteButton" text="Delete" />
        </HBox>
    </VBox>
</AnchorPane>

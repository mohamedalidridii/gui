<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.FlightBookingController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <Label text="Flight Booking" style="-fx-font-size: 18px; -fx-font-weight: bold">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <!-- Flight information section -->
    <GridPane hgap="10" vgap="5">
        <padding>
            <Insets bottom="15"/>
        </padding>

        <Label text="Selected Flight:" style="-fx-font-weight: bold" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="flightInfoLabel" text="Booking flight..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Booking form section -->
    <Label text="Passenger Details" style="-fx-font-weight: bold"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Enter full name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="Enter email address" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Number of Passengers:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="passengerCountField" promptText="Enter number of passengers" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Action buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancelClick"/>
        <Button fx:id="bookButton" text="Book Flight" onAction="#onBookClick" style="-fx-background-color: #4287f5; -fx-text-fill: white;"/>
    </HBox>
</VBox>